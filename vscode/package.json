{
	"name": "deviz",
	"displayName": "deviz",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:deviz.startSession"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "deviz.startSession",
				"title": "deviz: Start session"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "devizPanes",
					"name": "deviz"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "devizPanes",
				"contents": "[Start session](command:deviz.startSession)"
			}
		],
		"configuration": {
			"title": "deviz",
			"properties": {
				"deviz.runCommand": {
					"type": "string",
					"default": "",
					"description": "The command to run your program."
				},
				"deviz.compileCommand": {
					"type": "string",
					"default": "",
					"description": "The command to compile your program. Optional - if left blank, then the run command should handle any necessary compilation. For a compiled language, using this option may result in better performance when modifying stdin."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/escape-html": "^1.0.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"async-mutex": "^0.2.6",
		"dagre-d3": "^0.6.4",
		"escape-html": "^1.0.3",
		"fp-ts": "^2.9.1",
		"io-ts": "^2.2.13",
		"tree-kill": "^1.2.2"
	}
}
